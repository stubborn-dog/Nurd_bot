# This is a sample Python script.
from typing import Final
from telegram import Update
from telegram.ext import*

token = '6146945562:AAEsFHQ8b3vejCUwECp_1W4AREHSfJhO3RE'
bot_username = '@A_Nerd_Bot'

async def start_command(update: Update, context: ContextTypes.DEFAULT_TYPE):
    await update.message.reply_text("Hello it's")

# main logic
def handel_response(text: str) -> str:
    processed: str = text.lower()
    if 'hello' in text:
        return "Heyyy"
    if "how it's going" in text:
        return "I am still existing"
    else:
        return "I don't understand"

# Lets us use the /custom command
async def custom_command(update: Update, context: ContextTypes.DEFAULT_TYPE):
    await update.message.reply_text('In this section you can play game called "Guess Number"')



async def handle_message(update: Update, context: ContextTypes.DEFAULT_TYPE):
    message_type: str = update.message.chat.type
    text: str = update.message.text

    print(f'User ({update.message.chat.id}) in {message_type}: {text}')

    if message_type == 'group':
        if bot_username in text:
            new_text: str = text.replace(bot_username, "").strip()
            response: str = handel_response(new_text)
        else:
            return
    else:
        response: str = handel_response(text)
    print('Bot:', response)
    await update.message.reply_text(response)


async def error(update: Update, context: ContextTypes.DEFAULT_TYPE):
    print(f"Update {update} caused error {context.error}")

if __name__ == '__main__':
    app = Application.builder().token(token).build()
    app.add_handler(CommandHandler('start', start_command))
    app.add_handler(CommandHandler('custom', custom_command))

    # Massages
    app.add_handler(MessageHandler(filters.TEXT, handle_message))
    # Log all errors
    app.add_error_handler(error)

    print('Polling...')
    # Run the bot
    app.run_polling(poll_interval=5)
